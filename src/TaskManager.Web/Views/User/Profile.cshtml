@model TaskManager.Models.Shared.UserProfile;

@{
    ViewData["Title"] = "Профиль пользователя";
}

<div class="main-content">
    <div class="container">
        <h2 class="mb-4">@ViewData["Title"]</h2>

        <div class="task-card">
            <p><strong>ID:</strong> @Model.Id</p>
            <p><strong>Имя пользователя:</strong> @Model.Username</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Роль:</strong> @Model.Role</p>
        </div>
        <form asp-action="Logout" asp-controller="Auth" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Выйти</button>
    </form>
    </div>
</div>
